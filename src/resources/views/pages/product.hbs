<section
    class='section mb-0 top-section danhmuc-subcate section-boxed section-height-default section-height-default'
    data-aos='fade-up'
>
    <div class='container -gap-default'>
        <div class='row'>
            <div class='col-md-12'>
                <div class='breadcrumb'>
                    <div class='container'>
                        <nav class='nav breadcrumb'>
                            <span class='nmr-crumb'>
                                <a class='nav-link p-1' href='/'></a>
                            </span>

                            {{#if product.categories.0.level1}}
                                <span class='nmr-crumb'>
                                    <a class='nav-link p-1' href='{{product.categories.0.slug}}'>
                                        <i class='fa fa-angle-right'></i>
                                        {{product.categories.0.level1.name}}
                                    </a>
                                </span>
                            {{/if}}
                            {{#if product.categories.0.level2}}
                                <span class='nmr-crumb'>
                                    <a class='nav-link p-1' href='{{product.categories.0.slug}}'>
                                        <i class='fa fa-angle-right'></i>
                                        {{product.categories.0.level2.name}}
                                    </a>
                                </span>
                            {{/if}}
                            {{#if product.categories.0.level3}}
                                <span class='nmr-crumb'>
                                    <a class='nav-link p-1' href='{{product.categories.0.slug}}'>
                                        <i class='fa fa-angle-right'></i>
                                        {{product.categories.0.level3.name}}
                                    </a>
                                </span>
                            {{/if}}
                            <span class='nmr-crumb'>
                                <a class='nav-link p-1 active' href='/'>
                                    <i class='fa fa-angle-right'></i>
                                    {{product.pname}}
                                </a>
                            </span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class='section m-0 pb-0' data-aos='fade-up'>
    <div class='container'>
        <div class='row'>
            <div class='col-md-5'>
                <div class='product-images position-relative'>
                    <div class='widget-container'>
                            <span class='onsale onsale-product-detail rate'></span>
                        <div
                            class='lSSlideWrapper usingCss'
                            style='transition-timing-function: ease; transition-duration: 500ms;'
                        >
                            <ul id='lightSlider'>
                                {{#each product.pimg}}
                                    <li data-thumb='{{this}}'>
                                        <a href='{{this}}' class='lightbox'>
                                            <img class='img-product' width='600' height='600' src='{{this}}' alt='' />
                                        </a>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->

            <div class='col-md-7 mt-0 mt-sm-0 pt-2 pt-sm-0'>
                <div class='section-title ms-md-4 product-details'>

                    <div class='row pt-0'>

                        <div class='col-lg-12'>
                            <div class='product-title'>
                                <h2
                                    class='product_title entry-title elementor-heading-title elementor-size-default'
                                >{{product.pname}}</h2>
                            </div>
                            <div class='product_meta'>
                                <span class='sku_wrapper detail-container'>
                                    <span class='detail-label'>
                                        Mã Sản Phẩm:
                                    </span>
                                    <span id="pid" class='sku'>{{product.classify.0.pid}}</span>
                                </span>
                            </div>
                        </div>
                        <div class='col-lg-12 col-12'>
                            
                            <div class='d-flex shop-list align-items-center my-4'>
                                <h6 class='mb-0 shop-list-title'>Giá niêm yết:</h6>
                                <div class='ms-3'>
                                    <h5 class='text-muted product-price'>
                                        <span {{#when product.classify.[0].rate 'gt' 0}}
                                        style="text-decoration: line-through; color: grey"{{/when}} 
                                        class='Price-amount amount gia-niem-yet'>
                                            {{formatCurrency product.classify.[0].price}}
                                        </span>
                                    </h5>
                                </div>
                            </div>
                            <div class='discount-price d-flex shop-list align-items-center my-4'>
                                <h6 class='mb-0 shop-list-title'>Giảm:</h6>
                                <div class='ms-3'>
                                    <h5 class='text-muted product-price '>
                                        <span class='Price-amount amount rate'>
                                            {{product.classify.[0].rate}}%
                                        </span>
                                    </h5>
                                </div>
                            </div>
                            <div class='discount-price d-flex shop-list align-items-center my-4'>
                                <h6 class='mb-0 shop-list-title'>Giá khuyến mãi:</h6>
                                <div class='ms-3'>
                                    <h5 class='text-muted product-price'>
                                        <span class='Price-amount amount discount'>
                                            {{formatCurrency product.classify.[0].discount}}
                                        </span>
                                    </h5>
                                </div>
                            </div>

                            <form
                                action=''
                            >
                                <select style="display: none" name="purchasableId" id="variantProductSelect">
                                    {{#each product.classify}}
                                        <option value="{{this.pid}}"
                                            data-sku="{{this.pid}}"
                                            data-price="{{this.price}}"
                                            data-discount="{{this.discount}}"
                                            data-rate="{{this.rate}}"
                                            data-color="{{ this.colors.[0]}}"
                                            data-size="{{this.size}}"
                                            data-out-of-stock="false"
                                            
                                             >{{this.pid}}</option>
                                    {{/each}}
                                </select>

                                <div class='d-flex align-items-center'>
                                    <h6 class='mb-0 shop-list-title'>Chất liệu:</h6>
                                    <ul class='product-detail-item list-unstyled mb-0 ms-3'
                                        id="variantProductMaterial"
                                        >
                                        <li class='list-inline-item'
                                            data-material="{{product.material}}"
                                            >
                                            <a
                                                href='javascript:void(0)'
                                                class='btn btn-icon btn-soft-primary chose'
                                                title="{{product.material}}"
                                            >{{product.material}}</a>
                                        </li>
                                    </ul>
                                </div>

                                <div class='d-flex align-items-center'>
                                    <h6 class='mb-0 shop-list-title'>Màu sắc:</h6>
                                    <select style="display: none" name="color" id="colorSelect">
                                        {{#each product.classify.[0].colors as |item|}}
                                            <option value="{{item}}" >{{item}}</option>
                                        {{/each}}
                                    </select>

                                    <ul 
                                        class='product-detail-item list-unstyled mb-0 ms-3'
                                        id="variantProductColor"
                                        >                                        
                                        {{#each product.classify.0.colors as |item|}}
                                            <li class='list-inline-item'
                                                data-color="{{item}}"
                                                >
                                                <a
                                                    id="color"
                                                    href='javascript:void(0)'
                                                    class='btn btn-icon btn-soft-primary chose'
                                                    title="{{item}}"
                                                >{{item}}</a>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class='d-flex align-items-center'>
                                    <h6 class='mb-0 shop-list-title'>Kích thước:</h6>
                                    <select style="display: none" name="size" id="sizeSelect">
                                        {{#each product.classify as |item|}}
                                            <option value="{{item.size}}" >{{item.size}}</option>
                                        {{/each}}
                                    </select>
                                    <ul
                                        role='radiogroup'
                                        aria-label='Kích Thước'
                                        data-attribute_name='attribute_pa_kich-thuoc'
                                        data-attribute_values='[{{#each product.classify as |item|}}"{{item.size}}",{{/each}}]'
                                        class='product-detail-item list-unstyled mb-0 ms-3'
                                        id="variantProductSize"
                                    >
                                        {{#each product.classify as |item|}}
                                            <li
                                                role='radio'
                                                aria-checked='false'
                                                data-size='{{item.size}}'
                                                data-title='{{item.size}}'
                                                title='{{item.size}}'
                                                data-value='{{item.size}}'
                                                tabindex='0'
                                                class='list-inline-item'
                                            >
                                                <a
                                                    href='javascript:void(0)'
                                                    class='btn btn-icon btn-soft-primary'
                                                    title="{{item.size}}"
                                                >{{item.size}}</a>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </form>

                        </div>
                        <!--end col-->

                        <div class='col-lg-12 col-12 mt-5 mt-lg-0'>
                            <div class='row'>
                                <div class='col-lg-5 col-12'>
                                    <div class='d-flex shop-list align-items-center mt-2'>
                                        <h6 class='mb-0 shop-list-title'>Số lượng:</h6>
                                        <div class='qib-container mt-3'>
                                            <button
                                                type='button'
                                                data-product_id='{{id}}'
                                                class='minus qib-button'
                                            >-</button>
                                            <div class='quantity buttons_added buttons-added'>
                                                <label class='screen-reader-text' for='quantity'>Bộ Bàn Trang Điểm Hiện
                                                    Đại H&amp;H SCU-G1692 số lượng</label>
                                                <input
                                                    type='number'
                                                    id='quantity'
                                                    class='input-text qty quantity_{{id}} text'
                                                    step='1'
                                                    min='1'
                                                    max=''
                                                    name='cart[9897af2e1014f2e1c831b8d6e18f6e57][qty]'
                                                    value='1'
                                                    title='SL'
                                                    size='4'
                                                    placeholder=''
                                                    inputmode='numeric'
                                                />
                                            </div>
                                            <button
                                                type='button'
                                                data-product_id='{{id}}'
                                                class='plus qib-button'
                                            >+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class='col-lg-12 col-12'>
                                    <div class='d-block'>
                                        <ul class='product-detail-item list-unstyled mb-0 p-0'>
                                            <li class='list-inline-item'>
                                                <a  
                                                    id="addCart"
                                                    href='javascript:void(0)'
                                                    class='btn-submit btn btn-icon btn-soft-primary'
                                                >Thêm vào giỏ hàng</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!--end col-->

                        <div class='col-md-12 mt-4'>
                            <div class='row'>

                                <div class='col-md-3 col-12 d-flex mt-2'>
                                    <div
                                        class='share-btn share-btn_facebook'
                                        tabindex='0'
                                        aria-label='Share on facebook'
                                    >
                                        <span class='share-btn__icon'>
                                            <i class='fab fa-facebook' aria-hidden='true'></i>
                                        </span>
                                    </div>
                                    <div class='share-btn share-btn_twitter' tabindex='0' aria-label='Share on twitter'>
                                        <span class='share-btn__icon'>
                                            <i class='fab fa-twitter' aria-hidden='true'></i>
                                        </span>
                                    </div>
                                    <div
                                        class='share-btn share-btn_linkedin'
                                        tabindex='0'
                                        aria-label='Share on linkedin'
                                    >
                                        <span class='share-btn__icon'>
                                            <i class='fab fa-linkedin' aria-hidden='true'></i>
                                        </span>
                                    </div>
                                </div>
                                <div class='col-md-9 col-12 d-flex mt-2'>
                                    <div class='bg-white pr-2 mt-10'>
                                        <div
                                            data-layout='standard'
                                            data-colorscheme='light'
                                            data-size='small'
                                            data-show-faces='false'
                                            class='pt-1 pl-1 elementor-facebook-widget fb-like fb_iframe_widget'
                                            data-href='https://hhfurniture.com.vn?p=1533'
                                            data-share='true'
                                            data-action='like'
                                            fb-xfbml-state='rendered'
                                            fb-iframe-plugin-query='action=like&amp;app_id=&amp;color_scheme=light&amp;container_width=329&amp;href=https%3A%2F%2Fhhfurniture.com.vn%2F%3Fp%3D1533&amp;layout=standard&amp;locale=en_GB&amp;sdk=joey&amp;share=true&amp;show_faces=false&amp;size=small'
                                        ><span style='vertical-align: bottom; width: 450px; height: 28px;'><iframe
                                                    name='f34039cc12b9d8'
