                                                    frameborder='0'
                                                    allowtransparency='true'
                                                    allowfullscreen='true'
                                                    scrolling='no'
                                                    allow='encrypted-media'
                                                    src='https://www.facebook.com/v14.0/plugins/like.php?action=like&amp;app_id=&amp;channel=https%3A%2F%2Fstaticxx.facebook.com%2Fx%2Fconnect%2Fxd_arbiter%2F%3Fversion%3D46%23cb%3Df2092ad92b3f79%26domain%3Dhhfurniture.com.vn%26is_canvas%3Dfalse%26origin%3Dhttps%253A%252F%252Fhhfurniture.com.vn%252Ff5dbda1e2f9528%26relation%3Dparent.parent&amp;color_scheme=light&amp;container_width=329&amp;href=https%3A%2F%2Fhhfurniture.com.vn%2F%3Fp%3D1533&amp;layout=standard&amp;locale=en_GB&amp;sdk=joey&amp;share=true&amp;show_faces=false&amp;size=small'
                                                    style='border: none; visibility: visible; width: 450px; height: 28px;'
                                                    class=''
                                                ></iframe></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class='col-md-12 mt-4 product-detail-features position-relative'>
                            <div class='widget-container'>
                                <div class='button-wrapper'>
                                    <a href='#' class='button-link button size-sm' role='button'>
                                        <span class='button-content-wrapper'>
                                            <span class='button-text'>Ghi chú</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class='product-features'>
                                <div class='widget-container pt-3'>
                                    <ul class='list-unstyled icon-list-items'>
                                        <li class='icon-list-item'>
                                            <span class='icon-list-icon'>
                                                <i aria-hidden='true' class='fas fa-check'></i>
                                            </span>
                                            <span class='icon-list-text text-light'>Giá chưa bao gồm phí VAT và phí vận
                                                chuyển ngoại thành</span>
                                        </li>
                                        <li class='icon-list-item'>
                                            <span class='icon-list-icon'>
                                                <i aria-hidden='true' class='fas fa-check'></i>
                                            </span>
                                            <span class='icon-list-text text-light'>Bảo hành: liên hệ</span>
                                        </li>
                                        <li class='icon-list-item'>
                                            <span class='icon-list-icon'>
                                                <i aria-hidden='true' class='fas fa-check'></i>
                                            </span>
                                            <span class='icon-list-text text-light'>Nhập khẩu 100%</span>
                                        </li>
                                        <li class='icon-list-item'>
                                            <span class='icon-list-icon'>
                                                <i aria-hidden='true' class='fas fa-check'></i>
                                            </span>
                                            <span class='icon-list-text text-light'>Miễn phí vận chuyển nội thành HCM</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!--end row-->

                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->
    </div>
    <!--end container-->
</section>

<section class='section m-4'>
    <div class='container products'>
        <div class='row'>
            <div class='col-md-8' data-aos='fade-up'>
                <div class='row'>
                    <div class='col-md-4 posts--thumbnail-left _width-initial posts'>
                        <div class='heading-title-arround p-1'>
                            <h2 class='heading-title size-default fs-6 text-start' style='text-transform: uppercase;'>
                                Mô tả sản phẩm
                            </h2>
                        </div>
                    </div>
                    <div class='text-light widget-container'>
                        <p>{{{product.description}}}</p>
                    </div>

                    <div class='col-md-4 posts--thumbnail-left _width-initial posts'>
                        <div class='heading-title-arround p-1'>
                            <h2 class='heading-title size-default fs-6 text-start' style='text-transform: uppercase;'>
                                SẢN PHẨM LIÊN QUAN
                            </h2>
                        </div>
                    </div>
                    
                    <div class='col-md-8'></div>
                    {{#each lsProductRelated}}
                        <div class='col-md-3 px-1'>
                            {{> productPartials hasButton=true}}
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class='col-md-4 p-1' style='border:3px solid #ffba00' data-aos='fade-up'>
                <div class='row'>
                    <div class='-1 posts--thumbnail-left _width-initial posts'>
                        <div class='heading-title-arround p-1'>
                            <h2 class='heading-title size-default fs-6 text-start' style='text-transform: uppercase;'>
                                SẢN PHẨM KHUYẾN MÃI
                            </h2>
                        </div>
                    </div>
                    {{#each lsProductDiscount as |product|}}
                        {{#if discount}}
                            <div class='col-md-6'>
                                {{> productPartials}}
                            </div>
                        {{/if}}
                    {{/each}}

                    <div class='posts--thumbnail-left _width-initial posts'>
                        <div class='heading-title-arround p-1'>
                            <h2 class='heading-title size-default fs-6 text-start' style='text-transform: uppercase;'>
                                SẢN PHẨM Bán chạy
                            </h2>
                        </div>
                    </div>
                    {{#each lsProductBestSeller as |product|}}
                        {{#if isHot}}
                            <div class='col-md-6'>
                                {{> productPartials}}
                            </div>
                        {{/if}}
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</section> 